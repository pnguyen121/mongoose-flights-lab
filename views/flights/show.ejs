<%- include('../partials/header') %>


  <body>
    <h1 class="p-3 text-uppercase">Flight Details</h1>
    <section id="show-page">
		<div>Airline: </div>
		<div>
			<%= flight.airline %>
		</div>
		<div>Airport: </div>
		<div>
			<%= flight.airport %>
		</div>
		<div>Flight Number: </div>
		<div>
			<%= flight.flightNo %>
		</div>
		<div>Departs: </div>
		<div>
			<%= flight.departs%>
        </div>
	</section>
    <br> <br>
    <div>Tickets:</div>
    <ul>
        <% ticket.forEach(t => { %>
         <li class="text-center p-0">Seat: <%= t.seat %> Price: $<%= t.price%></li>
        <% }) %>
      </ul>

    <a href="/flights/<%= flight.id %>/tickets/new" class="btn btn-outline-primary">ADD NEW TICKET</a>

	<br><br>
	<h2>Add Destination</h2>
    <br>
    <div class="form-group">
	<form id="add-destination-form" method="POST" action="/flights/<%= flight._id %>/destinations">
		<label>Destination Airport:</label>
		<select name="airport">
			<option value="AUS">AUS</option>
			<option value="DFW">DFW</option>
			<option value="DEN">DEN</option>
			<option value="LAX">LAX</option>
			<option value="SAN" selected>SAN</option>
		</select>
        <label>Departs:
            <input type="datetime-local" name="arrival">
          </label>
		<input type="submit" value="Add Destination" class="btn btn-primary btn-sm">
	</form>
    </div>
    


	<% if (flight.destinations.length) { %>
		<table>
		  <thead>
			<tr>
			  <th>Date</th>
			  <th>Airport</th>
			  <th>Arrival</th>
			</tr>
		  </thead>
		  <tbody>
			<% flight.destinations.forEach(function(f) { %>
			  <tr>
				<td><%= f.createdAt.toLocaleDateString() %></td>
				<td><%= f.airport %></td>
				<td><%= f.arrival %></td>
			  </tr>
			<% }); %>
		  </tbody>
		</table>
	  <% } else { %>
		<h5>No Destinations Yet</h5>
	  <% } %>
</body>